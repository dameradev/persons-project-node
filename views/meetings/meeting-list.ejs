<%- include('../includes/head.ejs')%>
</head>
<body class="container-fluid">
  <%- include('../includes/navigation.ejs')%>
  <div class="container">
    
    <h1>List of Meetings</h1>
    <% meetings.forEach(meeting => { %>
      <div class="card">
          <h5 class="card-header">Important Meeting</h5>
          <div class="card-body">
            <h5 class="card-title"><h3>Title: <%= meeting.description %></h3></h5>
            <p class="card-text">Starting time: <%= meeting.start.getDate() %>.<%= meeting.start.getMonth() %>.<%= meeting.start.getFullYear() %> at <%= meeting.start.getHours() %>h </p>
            <p class="card-text"><p>Duration: <%= meeting.duration %>h</p></p>
            <a href="/meetings/<%= meeting.id %>" class="btn btn-primary">Read more..</a>
          </div>
        </div>
      
      <p></p>
      
    <% }) %>
  </div>
<%- include('../includes/end.ejs')%>