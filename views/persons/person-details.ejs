<%- include('../includes/head.ejs')%>
</head>
<body class="container-fluid">
  <%- include('../includes/navigation.ejs')%>
  <div class="container">
    <h1 class="text-center">Details about a person</h1><hr><br>
    

    <div class="card text-center">
      <div class="card-header">
        Person Details
      </div>
      
      <div class="card-body">
        <h5 class="card-title"><%= person.first_name %> <%= person.last_name %></h5>
        <p class="card-text">Nickname: <%= person.nickname %></p>
        <p class="card-text">Birthday: <%= person.birth_day.getDate() %>.<%= person.birth_day.getMonth() %>.<%= person.birth_day.getYear() +1900 %></p>
        <p class="card-text">Height: <%= person.height %></p>
        <p class="card-text">Location: <%= location.country %></p>
        
        <a href="/persons/<%= person.id %>/create-contact" class="btn btn-primary">Create a contact</a>
      </div>
      <div class="card-footer text-muted">
        <!-- to do: display contacts -->
      </div>
    </div>
  </div>
<%- include('../includes/end.ejs')%>